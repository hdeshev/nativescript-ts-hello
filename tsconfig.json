{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "app",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "node_modules/tns-core-modules/tns-core-modules.d.ts",
        "app/**/*.ts",
        "src/**/*.ts"
    ],
    "files": [
        "node_modules/tns-core-modules/tns-core-modules.d.ts",
        "src/app.ts",
        "src/main-page.ts",
        "src/main-view-model.ts"
    ]
}